---
// Contact component
---

<section id="contact" class="relative z-10 py-20 px-4">
    <div class="max-w-6xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2
                class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-white to-dark-300 bg-clip-text text-transparent"
            >
                Get In Touch
            </h2>
            <p class="text-xl text-dark-400">
                Let's discuss your next project or opportunity
            </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12">
            <!-- Left side - Contact Info -->
            <div class="space-y-8">
                <!-- Contact Methods -->
                <div
                    class="bg-dark-800/50 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-dark-700/50"
                >
                    <h3 class="text-2xl font-bold text-white mb-6">
                        <i class="fas fa-address-card text-primary-500 mr-3"
                        ></i>
                        Contact Information
                    </h3>

                    <div class="space-y-6">
                        <div
                            class="flex items-center space-x-4 p-4 rounded-xl hover:bg-dark-700/50 transition-colors duration-300"
                        >
                            <div
                                class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-xl flex items-center justify-center"
                            >
                                <i class="fas fa-envelope text-white"></i>
                            </div>
                            <div>
                                <p class="font-semibold text-white">Email</p>
                                <a
                                    href="mailto:itejera@gmail.com"
                                    class="text-dark-300 hover:text-primary-400 transition-colors"
                                >
                                    itejera01@gmail.com
                                </a>
                            </div>
                        </div>

                        <div
                            class="flex items-center space-x-4 p-4 rounded-xl hover:bg-dark-700/50 transition-colors duration-300"
                        >
                            <div
                                class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl flex items-center justify-center"
                            >
                                <i class="fab fa-linkedin text-white"></i>
                            </div>
                            <div>
                                <p class="font-semibold text-white">LinkedIn</p>
                                <a
                                    href="https://www.linkedin.com/in/ignacio-tejera-571a9733b/"
                                    class="text-dark-300 hover:text-primary-400 transition-colors"
                                >
                                    linkedin.com/in/ignacio-tejera
                                </a>
                            </div>
                        </div>

                        <div
                            class="flex items-center space-x-4 p-4 rounded-xl hover:bg-dark-700/50 transition-colors duration-300"
                        >
                            <div
                                class="w-12 h-12 bg-gradient-to-br from-gray-600 to-gray-700 rounded-xl flex items-center justify-center"
                            >
                                <i class="fab fa-github text-white"></i>
                            </div>
                            <div>
                                <p class="font-semibold text-white">GitHub</p>
                                <a
                                    href="https://github.com/itejera01"
                                    class="text-dark-300 hover:text-primary-400 transition-colors"
                                >
                                    github.com/itejera01
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Availability Status -->
                <div
                    class="bg-dark-800/30 backdrop-blur-sm rounded-2xl p-6 shadow-2xl border border-dark-700/30"
                >
                    <div class="flex items-center space-x-3 mb-4">
                        <div
                            class="w-3 h-3 bg-accent-500 rounded-full animate-pulse"
                        >
                        </div>
                        <h4 class="text-white font-semibold">
                            Current Availability
                        </h4>
                    </div>
                    <p class="text-dark-300">
                        Open to new opportunities and interesting projects.
                        Available for freelance work and full-time positions.
                    </p>
                </div>

                <!-- Response Time -->
                <div
                    class="bg-dark-800/30 backdrop-blur-sm rounded-2xl p-6 shadow-2xl border border-dark-700/30"
                >
                    <div class="flex items-center space-x-3 mb-4">
                        <i class="fas fa-clock text-primary-500"></i>
                        <h4 class="text-white font-semibold">Response Time</h4>
                    </div>
                    <p class="text-dark-300">
                        I typically respond to messages within 24 hours. For
                        urgent matters, feel free to reach out via LinkedIn.
                    </p>
                </div>
            </div>

            <!-- Right side - Contact Form -->
            <div
                class="bg-dark-800/50 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-dark-700/50"
            >
                <h3 class="text-2xl font-bold text-white mb-6">
                    <i class="fas fa-paper-plane text-primary-500 mr-3"></i>
                    Send a Message
                </h3>

                <form class="space-y-6" action="#" method="POST">
                    <div>
                        <label
                            for="name"
                            class="block text-sm font-semibold text-white mb-2"
                            >Full Name</label
                        >
                        <input
                            type="text"
                            id="name"
                            name="name"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-dark-600 bg-dark-700 text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-colors duration-300 placeholder-dark-400"
                            placeholder="Your full name"
                        />
                    </div>

                    <div>
                        <label
                            for="email"
                            class="block text-sm font-semibold text-white mb-2"
                            >Email Address</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-dark-600 bg-dark-700 text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-colors duration-300 placeholder-dark-400"
                            placeholder="your.email@example.com"
                        />
                    </div>

                    <div>
                        <label
                            for="subject"
                            class="block text-sm font-semibold text-white mb-2"
                            >Subject</label
                        >
                        <select
                            id="subject"
                            name="subject"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-dark-600 bg-dark-700 text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-colors duration-300"
                        >
                            <option value="">Select a subject</option>
                            <option value="project"
                                >Project Collaboration</option
                            >
                            <option value="job">Job Opportunity</option>
                            <option value="freelance">Freelance Work</option>
                            <option value="consultation"
                                >Technical Consultation</option
                            >
                            <option value="other">Other</option>
                        </select>
                    </div>

                    <div>
                        <label
                            for="message"
                            class="block text-sm font-semibold text-white mb-2"
                            >Message</label
                        >
                        <textarea
                            id="message"
                            name="message"
                            rows="5"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-dark-600 bg-dark-700 text-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-colors duration-300 resize-none placeholder-dark-400"
                            placeholder="Tell me about your project or opportunity..."
                        ></textarea>
                    </div>

                    <button
                        type="submit"
                        class="w-full bg-gradient-to-r from-primary-600 to-primary-500 text-white py-4 px-6 rounded-lg font-semibold hover:from-primary-700 hover:to-primary-600 transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-primary-500/25"
                    >
                        <i class="fas fa-paper-plane mr-2"></i>
                        Send Message
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
