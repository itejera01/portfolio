---
// Projects component
const projects = [
  {
    title: "PigmentAI",
    description: "Service made to generate different color palettes from a prompt using AI.",
    tech: ["Next.js", "Supabase", "Vercel", "Google Cloud AI"],
    icon: "fas fa-server",
    github: "https://github.com/itejera01/pigmentAI",
    demo: "https://pigment-ai.vercel.app",
    status: "Production",
    year: "2025"
  }
];
---

<section id="projects" class="relative z-10 py-20 px-4">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-white to-dark-300 bg-clip-text text-transparent">
        Featured Projects
      </h2>
      <p class="text-xl text-dark-400">Recent work and technical achievements</p>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {projects.map((project, index) => (
        <div class="group bg-dark-800/50 backdrop-blur-sm rounded-2xl p-8 shadow-2xl border border-dark-700/50 hover:border-primary-500/50 transition-all duration-300">
          <!-- Project Header -->
          <div class="flex items-start justify-between mb-6">
            <div class="flex items-center space-x-4">
              <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-accent-500 rounded-xl flex items-center justify-center">
                <i class={`${project.icon} text-white text-lg`}></i>
              </div>
              <div>
                <h3 class="text-xl font-bold text-white group-hover:text-primary-400 transition-colors duration-300">
                  {project.title}
                </h3>
                <div class="flex items-center space-x-3 mt-1">
                  <span class="text-dark-400 text-sm">{project.year}</span>
                  <span class="px-2 py-1 bg-accent-500/20 text-accent-400 text-xs rounded-full border border-accent-500/30">
                    {project.status}
                  </span>
                </div>
              </div>
            </div>
          </div>

          <!-- Project Description -->
          <p class="text-dark-300 leading-relaxed mb-6">
            {project.description}
          </p>

          <!-- Tech Stack -->
          <div class="mb-6">
            <h4 class="text-white font-semibold mb-3 text-sm uppercase tracking-wider">Tech Stack</h4>
            <div class="flex flex-wrap gap-2">
              {project.tech.map((tech) => (
                <span class="px-3 py-1 bg-dark-700 border border-dark-600 rounded-lg text-xs font-mono text-dark-300 hover:border-primary-500 transition-colors">
                  {tech}
                </span>
              ))}
            </div>
          </div>

          <!-- Project Links -->
          <div class="flex space-x-4">
            <a href={project.github} 
               class="flex items-center space-x-2 bg-dark-700 border border-dark-600 text-white px-4 py-2 rounded-lg hover:bg-dark-600 hover:border-dark-500 transition-all duration-300 text-sm font-medium">
              <i class="fab fa-github"></i>
              <span>Source</span>
            </a>
            <a href={project.demo} 
               class="flex items-center space-x-2 bg-gradient-to-r from-primary-600 to-primary-500 text-white px-4 py-2 rounded-lg hover:from-primary-700 hover:to-primary-600 transition-all duration-300 text-sm font-medium">
              <i class="fas fa-external-link-alt"></i>
              <span>Live Demo</span>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>